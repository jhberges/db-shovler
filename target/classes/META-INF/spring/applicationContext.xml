<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean class="org.springframework.jdbc.datasource.SingleConnectionDataSource" id="dataSource">
		<property name="username" value="${jdbcUsername}"/>
		<property name="password" value="${jdbcPassword}"/>
		<property name="url" value="${jdbUrl}"/>
	</bean>
	
	<bean class="com.onsmsc.db.shovler.InserterBean" id="inserterBean">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<bean class="com.onsmsc.db.shovler.ShovlerBean" id="shovlerBean">
		<property name="connectionFactory" ref="connectionFactory"/>
		<property name="jmsUsername" value="${jmsUsername}"/>
		<property name="jmsPassword" value="${jmsPassword}"/>
		<property name="destination" value="dest"/>
		<property name="inserterBean" ref="inserterBean"/>
	</bean>

</beans>
